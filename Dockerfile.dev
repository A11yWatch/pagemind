FROM node:14.18.1-alpine

ENV CHROME_BIN="/usr/bin/chromium-browser" \
	PUPPETEER_SKIP_CHROMIUM_DOWNLOAD="true" \ 
	DISPLAY="1.0" \
	NODE_ENV="development"

RUN set -x \
	&& apk update \
	&& apk upgrade \
	&& apk add --no-cache \
	udev \
	bash \
	ttf-freefont \
	chromium \
	python3 \
	make \
	g++

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm ci

COPY . .


CMD [ "npm", "run", "dev" ]
