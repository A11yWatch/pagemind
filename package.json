{
  "name": "@a11ywatch/pagemind",
  "version": "0.3.1",
  "description": "Get metrics on your web page with inclusion",
  "main": "./server.js",
  "scripts": {
    "dev": "ts-node-dev --transpile-only -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "pub": "tsc && tsc-alias && cp package.json dist && cp package-lock.json dist && cp README.md dist && cp LICENSE dist && cd dist && npm publish"
  },
  "dependencies": {
    "@a11ywatch/protos": "^0.1.7",
    "@a11ywatch/website-source-builder": "0.0.30",
    "@grpc/grpc-js": "1.6.7",
    "@grpc/proto-loader": "0.6.13",
    "fastq": "1.13.0",
    "get-page-speed": "1.0.1",
    "lighthouse": "9.6.2",
    "litepa11y": "0.5.11",
    "pb-util": "1.0.3",
    "puppeteer": "15.1.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.205",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.45",
    "jest": "^28.1.1",
    "jest-config": "^28.1.1",
    "prettier": "^2.5.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "1.6.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "verbose": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "keywords": [
    "accessibility",
    "testing",
    "WCAG"
  ]
}
