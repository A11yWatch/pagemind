{
  "name": "@a11ywatch/pagemind",
  "version": "0.5.102",
  "description": "Get metrics on your web page with inclusion",
  "main": "./server.js",
  "author": "Jeff Mendez",
  "contributors": [
    "Jeff Mendez (jeff@a11ywatch.com)"
  ],
  "homepage": "https://github.com/a11ywatch/pagemind",
  "bugs": "https://github.com/a11ywatch/pagemind/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a11ywatch/pagemind.git"
  },
  "scripts": {
    "dev": "ts-node-dev --transpile-only src/server.ts",
    "test": "jest",
    "build": "tsc",
    "start": "node dist/server.js",
    "fix": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "clean": "npm run fix",
    "pub": "tsc && cp package.json dist && cp package-lock.json dist && cp README.md dist && cp LICENSE dist && cd dist && npm publish"
  },
  "dependencies": {
    "@a11ywatch/protos": "^0.3.12",
    "@a11ywatch/website-source-builder": "^0.0.37",
    "@grpc/grpc-js": "1.8.0",
    "@grpc/proto-loader": "0.7.4",
    "a11y-js": "0.0.11",
    "fastq": "1.14.0",
    "get-page-speed": "1.0.1",
    "lighthouse": "9.6.8",
    "pb-util": "1.0.3",
    "puppeteer": "19.4.1",
    "user-agents": "^1.0.1233"
  },
  "devDependencies": {
    "@swc/core": "^1.3.19",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.45",
    "jest": "^28.1.1",
    "jest-config": "^28.1.1",
    "prettier": "^2.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "verbose": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "keywords": [
    "accessibility",
    "testing",
    "WCAG"
  ]
}
